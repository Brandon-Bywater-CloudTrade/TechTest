@model UserManagement.Web.Models.Logs.LogEntryViewItemViewModel

@if (!string.IsNullOrEmpty(Model.Error))
{
    <p class="text-danger">@Model.Error</p>
    <a asp-controller="Logs" asp-action="">Back To Logs</a>
}
else
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        Log Details
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label asp-for="Id" class="form-label"></label>
                                <input asp-for="Id" class="form-control" readonly>
                            </div>
                            <div class="mb-3">
                                <label asp-for="UserId" class="form-label"></label>
                                <input asp-for="UserId" class="form-control" readonly>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Action" class="form-label"></label>
                                <input asp-for="Action" class="form-control" readonly>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Changes" class="form-label"></label>
                                <input asp-for="Changes" class="form-control" readonly>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TimeOfChange" class="form-label"></label>
                                <input asp-for="TimeOfChange" class="form-control" readonly>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <a asp-action="Index" asp-controller="Logs" class="btn btn-primary">Back</a>
        </div>
    </div>
}
